{
	"$schema": "https://json-schema.org/draft-07/schema",
	"type": "object",
	"additionalProperties": false,

	"properties": {
		"obs": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"enabled": {
					"type": "boolean",
					"default": false
				},
				"port": {
					"type": "number",
					"default": 4444
				},
				"ip": {
					"type": "string",
					"default": "localhost"
				},
				"password": {
					"type": "string"
				}
			},
			"required": ["enabled"]
		},
		"twitch": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"parents": {
					"type": "array",
					"default": ["localhost"]
				}
			},
			"required": ["parents"]
		},
		"twitter": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"enabled": {
					"type": "boolean",
					"default": false
				},
				"key": {
					"type": "string",
					"default": ""
				},
				"secret": {
					"type": "string",
					"default": ""
				},
				"bearer": {
					"type": "string",
					"default": ""
				},
				"rules": {
					"type": "array",
					"default": [{ "value": "#PAXxAusSpeedruns2021", "tag": "Event Hashtag" }]
				}
			},
			"required": ["enabled", "key", "secret"]
		},
		"hostname": {
			"type": "string",
			"description": "Entry point hostname",
			"default": "localhost"
		},
		"tiltify": {
			"type": "object",
			"description": "Reads incentive data off the website",
			"properties": {
				"enabled": {
					"type": "boolean",
					"default": false
				},
				"key": {
					"type": "string",
					"default": ""
				},
				"campaign": {
					"type": "string",
					"default": ""
				}
			},
			"required": ["enabled","key", "campaign"]
		},
		"graphql": {
			"type": "object",
			"description": "Reads incentive data off the website",
			"properties": {
				"url": {
					"type": "string",
					"default": ""
				},
				"event": {
					"type": "string",
					"default": ""
				}
			},
			"required": ["url"]
		}
	},
	"required": ["obs", "twitch", "twitter", "tiltify"]
}
